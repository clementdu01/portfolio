{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --bg-color: #121212;
            --text-color: #e0e0e0;
            --card-bg: #1e1e2f;
            --primary-color: #bb86fc;
            --secondary-bg: #2c2c3e;
        }

        body.light-mode {
            --bg-color: #f8f9fa;
            --text-color: #212529;
            --card-bg: #ffffff;
            --primary-color: #6c63ff;
            --secondary-bg: #e9ecef;
        }

        body {
            background-color: var(--bg-color);
            color: var(--text-color);
            font-family: 'Poppins', sans-serif;
            transition: background-color 0.5s, color 0.5s;
            scroll-behavior: smooth;
        }

        header {
            background: linear-gradient(135deg, #1f1c2c, #928dab);
            padding: 100px 0 60px;
            margin-bottom: 40px;
            border-bottom: 3px solid var(--primary-color);
            text-align: center;
            color: white;
        }

        nav {
            background-color: var(--secondary-bg);
        }

        main {
            padding-top: 60px;
        }

        .card {
            background-color: var(--card-bg);
            border: none;
            border-radius: 20px;
            box-shadow: 0 8px 30px rgba(0,0,0,0.5);
            transition: transform 0.5s, background-color 0.5s;
            color: var(--text-color);
        }

        .card:hover {
            transform: translateY(-10px) scale(1.02);
        }

        .nav-link {
            color: var(--text-color) !important;
            font-weight: 500;
            transition: color 0.3s;
        }

        .nav-link:hover {
            color: var(--primary-color) !important;
        }

        .section-title {
            font-size: 3rem;
            margin-bottom: 2rem;
            text-transform: uppercase;
            font-weight: 700;
            letter-spacing: 3px;
            text-align: center;
            color: var(--primary-color);
        }

        footer {
            background-color: var(--secondary-bg);
            color: var(--text-color);
            text-align: center;
            padding: 30px 0;
            margin-top: 80px;
            font-size: 15px;
            border-top: 3px solid var(--primary-color);
        }

        section {
            margin-bottom: 80px;
        }

        .progress {
            height: 20px;
            background-color: var(--secondary-bg);
            border-radius: 20px;
            overflow: hidden;
            margin-bottom: 20px;
        }

        .progress-bar {
            background-color: var(--primary-color);
            animation: progressAnimation 2s ease-in-out forwards;
        }

        @keyframes progressAnimation {
            0% { width: 0; }
        }

        .skill-icon {
            font-size: 2rem;
            margin-right: 15px;
            color: var(--primary-color);
        }

        .skill-title {
            font-size: 1.2rem;
            font-weight: bold;
        }

        /* Sous-cartes */
        .skill-card {
            cursor: pointer;
            background-color: var(--card-bg);
            border: 1px solid var(--primary-color);
            border-radius: 15px;
            padding: 20px;
            transition: transform 0.3s ease-in-out, background-color 0.3s ease;
        }

        .skill-card:hover {
            transform: scale(1.05);
            background-color: var(--primary-color);
        }

        /* Modal */
        .modal-content {
            border-radius: 15px;
            background-color: var(--card-bg);
            color: var(--text-color);
        }

        .modal-header {
            border-bottom: 2px solid var(--primary-color);
        }

        /* Slider */
        .switch {
            position: relative;
            display: inline-block;
            width: 60px;
            height: 34px;
        }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .slider {
            display: block;
            width: 100%;
            height: 100%;
            position: relative;
            cursor: pointer;
            background-color: #ccc;
            border-radius: 50px;
            transition: background-color 0.4s;
        }

        /* Handle contenant les icônes */
        .handle {
            position: absolute;
            left: 4px;
            bottom: 4px;
            height: 26px;
            width: 26px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: transform 0.4s;
        }

        /* Position et style des icônes */
        .handle i {
            position: absolute;
            font-size: 16px;
            transition: opacity 0.4s;
        }

        .handle .fa-sun {
            opacity: 1;
        }

        .handle .fa-moon {
            opacity: 0;
        }

        /* État checked */
        input:checked + .slider {
            background-color: var(--primary-color);
        }

        input:checked + .slider .handle {
            transform: translateX(26px);
        }

        input:checked + .slider .handle .fa-sun {
            opacity: 0;
        }

        input:checked + .slider .handle .fa-moon {
            opacity: 1;
        }

    </style>
{% endblock %}

{% block title %}Portfolio Moderne{% endblock %}

{% block body %}
    <header class="animate__animated animate__fadeInDown">
        <div class="container">
            <h1 class="display-3 fw-bold">Bienvenue sur mon Portfolio</h1>
            <p class="lead animate__animated animate__fadeIn animate__delay-1s">Développeur passionné créant des expériences web modernes</p>

            <div class="mt-4">
                <label class="switch">
                    <input type="checkbox" id="theme-switch">
                    <span class="slider">
                        <span class="handle">
                            <i class="fas fa-sun"></i>
                            <i class="fas fa-moon"></i>
                        </span>
                    </span>
                </label>
            </div>
        </div>
    </header>

    <nav class="navbar navbar-expand-lg navbar-dark sticky-top shadow">
        <div class="container">
            <a class="navbar-brand" href="#">MonPortfolio</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="#presentation">Présentation</a></li>
                    <li class="nav-item"><a class="nav-link" href="#competences">Compétences</a></li>
                    <li class="nav-item"><a class="nav-link" href="#projets">Projets</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container">
        <section id="presentation" class="animate__animated animate__fadeInLeft">
            <div class="card p-5">
                <h2 class="section-title">Présentation</h2>
                <p class="text-center fs-5">Bienvenue ! Je suis <strong>[Ton Nom]</strong>, développeur spécialisé dans la création de solutions web élégantes, modernes et performantes. Ma passion : transformer des idées en expériences digitales inoubliables.</p>
            </div>
        </section>

        <section id="competences" class="animate__animated animate__fadeInRight">
            <div class="card p-5">
                <h2 class="section-title">Compétences Techniques</h2>

                <div class="row">
                    <div class="col-md-4 mb-4">
                        <div class="skill-card" data-bs-toggle="modal" data-bs-target="#phpModal">
                            <h4 class="text-center"><i class="fab fa-php skill-icon"></i> PHP</h4>
                            <p class="text-center">Cliquez pour voir les technologies PHP que je maîtrise.</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="skill-card" data-bs-toggle="modal" data-bs-target="#jsModal">
                            <h4 class="text-center"><i class="fab fa-js skill-icon"></i> JavaScript</h4>
                            <p class="text-center">Cliquez pour voir les technologies JavaScript que je maîtrise.</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="skill-card" data-bs-toggle="modal" data-bs-target="#htmlModal">
                            <h4 class="text-center"><i class="fab fa-html5 skill-icon"></i> HTML5 / CSS3</h4>
                            <p class="text-center">Cliquez pour voir les technologies HTML et CSS que je maîtrise.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section id="projets" class="animate__animated animate__fadeInUp">
            <div class="card p-5">
                <h2 class="section-title">Mes Projets</h2>
                <div class="row gy-4">
                    <div class="col-md-4">
                        <div class="card p-4 bg-gradient text-light h-100">
                            <h3 class="h5">Personnels</h3>
                            <p>Applications personnelles, projets open-source, portfolios interactifs.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card p-4 bg-gradient text-light h-100">
                            <h3 class="h5">Académiques</h3>
                            <p>Projets de formation universitaire ou auto-formations poussées en fullstack.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card p-4 bg-gradient text-light h-100">
                            <h3 class="h5">Professionnels</h3>
                            <p>Solutions livrées en entreprise, missions freelances de haute qualité.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer>
        &copy; {{ "now"|date("Y") }} MonPortfolio - Tous droits réservés.
    </footer>

    <!-- Modal PHP -->
    <div class="modal fade" id="phpModal" tabindex="-1" aria-labelledby="phpModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="phpModalLabel">Technologies PHP</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h4>Symfony</h4>
                    <div class="progress mb-3">
                        <div class="progress-bar" style="width: 85%;"></div>
                    </div>

                    <h4>PHP Natif</h4>
                    <div class="progress mb-3">
                        <div class="progress-bar" style="width: 90%;"></div>
                    </div>

                    <h4>Laravel</h4>
                    <div class="progress mb-3">
                        <div class="progress-bar" style="width: 75%;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const themeSwitch = document.getElementById('theme-switch');
            if (themeSwitch) {
                themeSwitch.addEventListener('change', function() {
                    console.log("Bouton cliqué !");
                    document.body.classList.toggle('light-mode');
                });
            }
        });
    </script>
{% endblock %}
